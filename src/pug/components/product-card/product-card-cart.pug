                        </svg>
                    button.btn
                        <svg width="28" height="28" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M3.73738 5.74745C1.41975 8.07668 1.422 11.8248 3.73738 14.1563L13.9938 24.488C17.4165 21.048 20.8395 17.6079 24.2618 14.1678C26.5794 11.8386 26.5794 8.08839 24.2618 5.75895C21.9441 3.4295 18.2126 3.42971 15.8952 5.75895L14.0055 7.65804L12.104 5.74693C9.78635 3.41769 6.05486 3.41769 3.73743 5.74693L3.73738 5.74745Z" stroke="#333435"/>
                        </svg>
            .product-swiper
                .swiper-wrapper 
                    each img,index in data.imgs
                        .swiper-slide 
                            img(load='lazy' src=img, alt="product")
                .lines 
            .hidden-content 
                button.btn.outline-fill.violet.m быстрый просмотр
                .pagination

        .product-info(style="display:none") 
            .main-info
                .top 
                    .left-block 
                        p #{data.art}
                        if data.barcode
                            p #{data.barcode}
                    .right-block 
                        if data.count === 'many'
                            p.count.many Много
                        else 
                            p.count.few Мало
                .bottom 
                    .price-wrapper 
                        p.price #{data.price}
                        p.oldPrice #{data.oldPrice}
                    p.descr #{data.descr}
            .cart-btn-wrapper 
                .counter
                    button.btn.clear.dec
                        <svg width="15" height="1" viewBox="0 0 15 1" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M0.5 0.5H14.5" stroke="#333435"/>
                        </svg>
                    .current-count 1
                    button.btn.clear.inc 
                        <svg width="15" height="15" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M0.506836 7.5H14.5068" stroke="#333435"/>
                            <path d="M7.50684 14.5L7.50684 0.5" stroke="#333435"/>
                        </svg>
                button.btn.primary.m.cart-btn 
                    p в корзину
                    <svg width="8" height="14" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M1 13L7 7L0.999999 1" stroke="white" stroke-linecap="square" stroke-linejoin="round"/>
                    </svg>


        .product-info-hor 
            .left-side 
                .top 
                    span Арт 68012
                    span штрихкод 4606008612533
                    if data.count === 'many'
                        if data.opt 
                            p.count.many 344шт.
                        else
                            p.count.many много
                    else if data.count === 'no'
                        p.count.no Нет в наличии
                    else 
                        if data.opt
                            p.count.few 18шт.
                        else
                            p.count.few мало
                p.descr #{data.descr}

                .price-wrapper 
                    p.price #{data.price}
                    p.oldPrice #{data.oldPrice}
                    button(type="button" data-modal-target="remove-product").remove-btn
                        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M16.3025 2.99548L15.5242 14.6703C15.4367 15.9835 14.3461 17.0042 13.03 17.0043H6.96948C5.7356 17.0042 4.69943 16.1076 4.50269 14.9135L4.47534 14.6703L3.69702 2.99548H16.3025Z" stroke="#A8A9B0"/>
                            <path d="M1.21484 2.97907L18.9648 2.97907" stroke="#A8A9B0"/>
                            <line x1="10.0315" y1="7.0816" x2="10.0315" y2="12.9185" stroke="#A8A9B0"/>
                            <line x1="12.6885" y1="7.08154" x2="12.6885" y2="12.9184" stroke="#A8A9B0"/>
                            <line x1="7.42578" y1="7.08154" x2="7.42578" y2="12.9184" stroke="#A8A9B0"/>
                        </svg>
                .info 
                    p Дизайн:&nbsp; 
                        span Киберпанк
                    p Формат:&nbsp; 
                        span А4
                    p Плотность бумаги: 
                        span 80 +- 3 г/м2
                    p Кол-во листов:&nbsp; 
                        span 500
                    p Класс бумаги:&nbsp; 
                        span Сэ
                    p Белизна CIE:&nbsp;
                        span нет
            .right-side.cart-btn-wrapper
                .right-side
                .price-wrapper 
                    p.price #{data.price}
                    p.oldPrice #{data.oldPrice}
                    button(type="button" data-modal-target="remove-product").remove-btn
                        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M16.3025 2.99548L15.5242 14.6703C15.4367 15.9835 14.3461 17.0042 13.03 17.0043H6.96948C5.7356 17.0042 4.69943 16.1076 4.50269 14.9135L4.47534 14.6703L3.69702 2.99548H16.3025Z" stroke="#A8A9B0"/>
                            <path d="M1.21484 2.97907L18.9648 2.97907" stroke="#A8A9B0"/>
                            <line x1="10.0315" y1="7.0816" x2="10.0315" y2="12.9185" stroke="#A8A9B0"/>
                            <line x1="12.6885" y1="7.08154" x2="12.6885" y2="12.9184" stroke="#A8A9B0"/>
                            <line x1="7.42578" y1="7.08154" x2="7.42578" y2="12.9184" stroke="#A8A9B0"/>
                        </svg>
 
                
                if data.count === 'many'
                    if data.opt
                        p.count.many 344шт.
                    else
                        p.count.many много
                    .counter
                        button.btn.clear.dec
                            <svg width="15" height="1" viewBox="0 0 15 1" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M0.5 0.5H14.5" stroke="#333435"/>
                            </svg>
                        .current-count 1
                        button.btn.clear.inc 
                            <svg width="15" height="15" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M0.506836 7.5H14.5068" stroke="#333435"/>
                                <path d="M7.50684 14.5L7.50684 0.5" stroke="#333435"/>
                            </svg>
                    .nds
                        p 62 000 ₽
                        span В том числе НДС 20%
                        span 1 короб, 1 мини упаковка и 5 шт
                else if data.count === 'no'
                    p.count.no Нет в наличии
                    button.btn.outline.account-btn.l(data-modal-target="analogues-modal")
                        p выберите аналог
                else
                    if data.opt
                        p.count.few 18шт.
                    else
                        p.count.few мало
                    .counter
                        button.btn.clear.dec
                            <svg width="15" height="1" viewBox="0 0 15 1" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M0.5 0.5H14.5" stroke="#333435"/>
                            </svg>
                        .current-count 62
                        button.btn.clear.inc 
                            <svg width="15" height="15" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M0.506836 7.5H14.5068" stroke="#333435"/>
                                <path d="M7.50684 14.5L7.50684 0.5" stroke="#333435"/>
                            </svg>
                    if data.errorMsg 
                        button.btn.outline.account-btn.l(data-modal-target="analogues-modal")
                            p выберите аналог
                        p.error-msg На складе не достаточно товаров! Измените кол-во и/или замените аналогом
                    .nds
                        p 1 100 ₽
                        span В том числе НДС 20%
                
        
                