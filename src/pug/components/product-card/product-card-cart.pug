                    <line x1="12.6885" y1="7.08154" x2="12.6885" y2="12.9184" stroke="#A8A9B0"/>
                    <line x1="7.42578" y1="7.08154" x2="7.42578" y2="12.9184" stroke="#A8A9B0"/>
                </svg>
        .product-card-swiper-wrapper 
            .product-card-features 
                label.custom-checkbox-wrapper
                    input(type="checkbox").custom-checkbox
                    p
                if data.badgeTitle
                    .badge(class=data.badgeClass) #{data.badgeTitle}
                .features-list 
                    button.btn
                        <svg width="28" height="28" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M14 25.4666V1.99997" stroke="#333435" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M9.59844 25.4663L18.3984 25.4663" stroke="#333435" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M3 4.19997L25 4.19997" stroke="#333435" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M17.5046 14.207L21.5 5.22967L25.4954 14.2069C25.4512 14.6687 25.0906 15.2138 24.3836 15.6797C23.6457 16.1659 22.6169 16.5 21.5 16.5C20.3705 16.5 19.3421 16.1655 18.6081 15.6801C17.9056 15.2155 17.5483 14.6705 17.5046 14.207Z" stroke="#333435"/>
