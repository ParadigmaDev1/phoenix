mixin document-card(data)
    .document-card
        input(type="checkbox").custom-checkbox
        .title-wrapper 
            img( src=data.img, alt="document")
            p.title #{data.title}
        .info
            a(href="#").company 
                <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <g clip-path="url(#clip0_9089_185129)">
                    <path d="M3.07812 5.99203H11.1322M11.1322 5.99203L8.37083 9.21368M11.1322 5.99203L8.37083 2.77039" stroke="#A8A9B0"/>
                    <path d="M6.29896 11.4687L0.5 11.4687L0.5 0.515152L6.29896 0.515151" stroke="#A8A9B0"/>
                    </g>
                    <defs>
                    <clipPath id="clip0_9089_185129">
                    <rect width="12" height="12" fill="white"/>
                    </clipPath>
                    </defs>
                </svg>
                p #{data.company}
            p.date 22.07.24 в 12:00
        .comment-wrapper
            if data.comment
                p.comment #{data.comment}
            else 
                button.btn.text.add-comment-btn
                    <svg width="15" height="15" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M0.506836 7.5H14.5068" stroke="#343176"/>
                        <path d="M7.50684 14.5L7.50684 0.5" stroke="#343176"/>
                    </svg>
                    span Добавить
                .textarea-wrapper.hidden 
                    textarea(placeholder="Введите")
                    .btns 
                        button.btn.primary.m.save-comment-btn 
                            <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M1 9L6.64706 15L17 4" stroke="white" stroke-linecap="square" stroke-linejoin="round"/>
                            </svg>
                            span сохранить
                        button.btn.outline.gray.m.cancel-comment-btn  
                            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M1 15L15 1M15 15L1 1" stroke="#A8A9B0"/>
                            </svg>
                            span отменить