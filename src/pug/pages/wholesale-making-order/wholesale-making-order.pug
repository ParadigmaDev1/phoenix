mixin wholesale-making-order()
    .wholesale-making-order
        .wholesale-making-order-inner.container
            .content 
                .top 
                    h1 оформление заказа
                form.form
                    h6 способ получения
                    .radio-wrapper 
                        label
                            input(type="radio" name='delivery' value='pickup' checked)
                            span Самовывоз
                        label
                            input(type="radio" name='delivery' value='delivery')
                            span Доставка
                    .pickup 
                        p Адрес самовывоза и информация по самовывозу
                    .delivery.hidden 
                        h6 адрес доставки
                        .input-wrapper 
                            p Грузополучатель
                            .selector
                                button(type='button').selector-btn
                                    span.selector-title
                                        span.text-content
                                            span Выберите
                                    span.icon
                                        <svg width="10" height="6" viewBox="0 0 10 6" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M1 1L5 5L9 1" stroke="#333435" stroke-linecap="square" stroke-linejoin="round"/>
                                        </svg>
                                .selector-content
                                    .selector-list
                                        label.radio-item
                                            input(type="radio" name='recipient')
                                            span ИП Константинопольский Александр Александрович
                                        label.radio-item
                                            input(type="radio" name='recipient')
                                            span ООО «Вселенная канцелярских товаров»
                                        label.radio-item
                                            input(type="radio" name='recipient')
                                            span ИП Иванов Иван Иванович
                                        button.btn.violet.outline.m(data-modal-target='add-legal-entities-modal') 
                                            <svg width="15" height="15" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M0.506836 7.5H14.5068" stroke="#333435"/>
                                                <path d="M7.50684 14.5L7.50684 0.5" stroke="#333435"/>
                                            </svg>
                                            span добавить
                        .input-wrapper 
                            p Адрес из вашего списка
                            .selector
                                button(type='button').selector-btn
                                    span.selector-title
                                        span.text-content
                                            span Выберите
                                    span.icon
                                        <svg width="10" height="6" viewBox="0 0 10 6" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M1 1L5 5L9 1" stroke="#333435" stroke-linecap="square" stroke-linejoin="round"/>
                                        </svg>
                                .selector-content
                                    .selector-list
                                        label.radio-item
                                            input(type="radio" name='address')
                                            span Москва, ул. Садовая-Кудринская, 25
                                        label.radio-item
                                            input(type="radio" name='address')
                                            span Москва, ул. Нагорная, 134
                                        label.radio-item
                                            input(type="radio" name='address')
                                            span Москва, ул. Николо-Ямская, 7
                                        label.radio-item
                                            input(type="radio" name='address')
                                            span Москва, Щелковское шоссе, 19
                                        button.btn.violet.outline.m(data-modal-target='add-delivery-address-modal') 
                                            <svg width="15" height="15" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M0.506836 7.5H14.5068" stroke="#333435"/>
                                                <path d="M7.50684 14.5L7.50684 0.5" stroke="#333435"/>
                                            </svg>
                                            span добавить
                    button.btn.primary.m.submit-btn
                        span оформить заказ
            .back-btn-wrapper 
                .sticky-block
                    a(href="#").btn.outline.violet.m.back-btn
                        <svg width="8" height="14" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M7 13L1 7L7 1" stroke="#343176" stroke-linecap="square" stroke-linejoin="round"/>
                        </svg>
                        span назад в корзину
                