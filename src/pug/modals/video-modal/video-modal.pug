mixin video-modal()
    .video-modal.modal
        .modal-content-wrapper
            .close-modal-wrapper
                button.btn.close-modal 
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M5.05026 14.9497L14.9498 5.05025" stroke="#343176"/>
                        <path d="M14.9498 14.9497L5.05026 5.05025" stroke="#343176"/>
                    </svg>
            .modal-content
                .video-block
                    video(src='./files/video.mp4' width='840' height='475' preload="auto" poster="./img/about/info/preview.jpg")
                    button.btn.play-btn 
                        <svg width="96" height="96" viewBox="0 0 96 96" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <circle cx="48" cy="48" r="48" fill="#49454C"/>
                            <path d="M38.5 31.5455L67 48L38.5 64.4545L38.5 31.5455Z" stroke="white"/>
                        </svg>